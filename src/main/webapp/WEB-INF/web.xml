<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlet.BoardLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginResult</servlet-name>
        <servlet-class>Servlet.BoardLoginResult</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginResult</servlet-name>
        <url-pattern>/loginResult</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>Servlet.BoardMainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>Servlet.BoardReadListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>readPost</servlet-name>
        <servlet-class>Servlet.BoardReadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>readPost</servlet-name>
        <url-pattern>/readPost</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>writeForm</servlet-name>
        <servlet-class>Servlet.BoardWriteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>writeForm</servlet-name>
        <url-pattern>/write</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>write</servlet-name>
        <servlet-class>Servlet.BoardWriteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>write</servlet-name>
        <url-pattern>/write</url-pattern>
    </servlet-mapping>
</web-app>